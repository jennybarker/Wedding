<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WeddingPartyActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:background="@color/colorLightBack2">

        <androidx.appcompat.widget.Toolbar
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/colorLightBack2"
            android:layout_gravity="center_horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:text="Meet the Wedding Party"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                android:fontFamily="@font/clicker_script"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bridesmaids"
            android:textAlignment="center"
            android:padding="10dp"
            android:fontFamily="@font/clicker_script"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/ic_profile"
                    android:id="@+id/image_profile_bex"
                    app:civ_border_color="@color/colorDarkBack2"
                    app:civ_border_width="3dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bex"
                    android:textAlignment="center"
                    android:fontFamily="@font/clicker_script"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/ic_profile"
                    android:id="@+id/image_profile_becky"
                    app:civ_border_color="@color/colorDarkBack2"
                    app:civ_border_width="3dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Becky"
                    android:textAlignment="center"
                    android:fontFamily="@font/clicker_script"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"/>

            </LinearLayout>

        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile"
                android:id="@+id/image_profile_ellie"
                app:civ_border_color="@color/colorDarkBack2"
                app:civ_border_width="3dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ellie"
                android:textAlignment="center"
                android:fontFamily="@font/clicker_script"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile"
                android:id="@+id/image_profile_jo"
                app:civ_border_color="@color/colorDarkBack2"
                app:civ_border_width="3dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jo"
                android:textAlignment="center"
                android:fontFamily="@font/clicker_script"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Groomsmen"
        android:textAlignment="center"
        android:padding="10dp"
        android:fontFamily="@font/clicker_script"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_profile"
                android:id="@+id/image_profile_andy"
                app:civ_border_color="@color/colorDarkBack2"
                app:civ_border_width="3dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Andy"
                android:textAlignment="center"
                android:fontFamily="@font/clicker_script"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_profile"
                android:id="@+id/image_profile_ross"
                app:civ_border_color="@color/colorDarkBack2"
                app:civ_border_width="3dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ross"
                android:textAlignment="center"
                android:fontFamily="@font/clicker_script"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_profile"
                android:id="@+id/image_profile_steven"
                app:civ_border_color="@color/colorDarkBack2"
                app:civ_border_width="3dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stephen"
                android:textAlignment="center"
                android:fontFamily="@font/clicker_script"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_profile"
                app:civ_border_color="@color/colorDarkBack2"
                android:id="@+id/image_profile_richard"
                app:civ_border_width="3dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Richard"
                android:textAlignment="center"
                android:fontFamily="@font/clicker_script"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"/>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</ScrollView>

</RelativeLayout>